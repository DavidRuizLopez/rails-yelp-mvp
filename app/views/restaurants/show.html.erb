<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h3><%= @restaurant.category %></h3>
<p><%= @restaurant.phone_number %></p>
<p><% @restaurant.reviews.all.each do |review| %>
    <%= review.content %>  <%= review.rating %>
  <% end %>
</p>
<%= link_to 'add review', new_restaurant_review_path(@restaurant), class: "btn btn-info" %>
<%= link_to 'go to the home', restaurants_path(@restaurants), class: "btn btn-success" %>

